<h1>New payment</h1>

<%= form_tag payments_path, id: 'card-details' do %> 
	<div class="payment-errors"></div> 

	<div class="form-group"> 
		<label for="card-number">Card Number:</label> 
		<input id="card-number" class="form-control" type="text" data-stripe="number" /> 
	</div> 

	<div class="form-group"> 
		<label for="card-exp-month">Card Expiry Month:</label> 
		<input id="card-exp-month" class="form-control" type="text" data-stripe="exp_month" /> 
	</div> 

	<div class="form-group"> 
		<label for="card-exp-year">Card Expiry Year:</label>
		<input id="card-exp-year" class="form-control" type="text" data-stripe="exp_year" />
	</div>

	<div class="form-group">
		<label for="card-cvc">CVC:</label>
		<input id="card-cvc" class="form-control" type="text" data-stripe="cvc" /> 
	</div> 

<!-- 	<div class="form-group"> 
		<label for="payment-type">Payment Type:</label>
		<select id="payment-type" name="payment_type">
			<option value="deposit">$20 Deposit</option>
			<option value="subscription">Monthly subscription, $9.97</option> 
		</select> 
	</div>  -->

	<div class="form-group"> 
		<label for="payment-type">Deposit Amount:</label>
		<input id="deposit-amount" class="form-control" type="text" data-stripe="amount" /> 
	</div> 

	<div> 
		<div type="submit" class="btn btn-default"> Pay Now </div>
	</div> 
<% end %>
<%= link_to 'Back', payments_path %>
