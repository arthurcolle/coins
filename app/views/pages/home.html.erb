<div class="container">
  <div class="jumbotron center">
    <% if current_user %>
        <h1>Hello, <%= current_user.name.split(" ")[0].titleize %></h1>
        <% require 'open-uri' %>
        <% require 'json' %>
        <% url = "https://blockchain.info/address/#{ current_user.wallet.receiving_address }?format=json" %>
        <% @data = URI.parse(url).read %>
        <% hash_data = JSON.parse(@data) %>
        <% balance = BigDecimal.new(hash_data['final_balance'].to_s) %>
        <% balance = balance.fdiv(BigDecimal.new("100000000")) %>
        <% current_user.balance = balance %>
        <% puts "Balance: #{balance.to_f} BTC" %>
     

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Your wallet</h3>
          </div>
          
          <div class="panel-body">
            <table class="table">
            <thead>
              <th>Address</th>
              <th>Balance</th>
            </thead>
            <tr>
              <td> <%= current_user.wallet.receiving_address %> </td>
              <td> <% if balance == 0 %>
                <p> Begin by sending some BTC to your receiving address, displayed below.</p>
                <% elsif balance < 1.0 %>
                    <%= balance.to_f %> bitcoin
                <% else %>
                    <%= balance.to_f %> bitcoins
                <% end %> </td>
            </tr>
            </table>
          </div>
        </div>

    <% else %>
        <h1>Coins</h1>
    <% end %>
    <p> Top up your account, get your friends online, and send them coins. </p>
    <p> For free. Forever. </p>
  </div>
</div>



